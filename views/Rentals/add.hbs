<div class="greeting">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2>Add New Rental</h2>
        </div>
        <div class="card-body">
          <form action="/Rentals/add" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="headline">Headline:</label>
              <input type="text" class="form-control" id="headline" name="headline" required>
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="numSleeps">Number of Sleeps:</label>
                <input type="number" class="form-control" id="numSleeps" name="numSleeps" min="0" max="100" required>
              </div>
              <div class="form-group col-md-6">
                <label for="numBedrooms">Number of Bedrooms:</label>
                <input type="number" class="form-control" id="numBedrooms" name="numBedrooms" min="0" max="100" required>
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="numBathrooms">Number of Bathrooms:</label>
                <input type="number" class="form-control" id="numBathrooms" name="numBathrooms" min="0" max="100" required>
              </div>
              <div class="form-group col-md-6">
                <label for="pricePerNight">Price per Night:</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                  </div>
                  <input type="number" class="form-control" id="pricePerNight" name="pricePerNight" min="0.01" step="0.01" required>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="city">City:</label>
              <input type="text" class="form-control" id="city" name="city" required>
            </div>
            <div class="form-group">
              <label for="province">Province:</label>
              <input type="text" class="form-control" id="province" name="province" required>
            </div>
            <div class="form-group">
              <label for="imageUrl">Upload Image:</label>
              <input type="file" class="form-control-file" id="imageUrl" name="imageUrl" required>
            </div>
            <div class="form-group form-check">
              <input type="checkbox" class="form-check-input" id="featuredRental" name="featuredRental">
              <label class="form-check-label" for="featuredRental">Featured Rental</label>
            </div>
            <button type="submit" class="btn button_gr" >Add Rental</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<head>
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>